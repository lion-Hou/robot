<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_item_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/history_map_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="地图名字"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_21"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <TextView
        android:id="@+id/history_task_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="地图名字"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_21"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center" />
    <TextView
        android:id="@+id/history_time_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="地图名字"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_21"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/history_date_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="地图名字"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_21"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"/>
</LinearLayout>