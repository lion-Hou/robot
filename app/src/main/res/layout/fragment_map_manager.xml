<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".map.MapManagerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/new_map_mapImage"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="@string/new_map_name_text"/>

        <Spinner
            android:id="@+id/manager_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/manager_newMap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add New Map"
            android:textSize="30dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/manager_mapImage"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/manager_mapImage"
        >

        <Button
            android:id="@+id/manager_rename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Rename" />

        <Button
            android:id="@+id/manager_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Delete" />

        <Button
            android:id="@+id/manager_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Edit" />

        <Button
            android:id="@+id/manager_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back"
            android:textSize="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>