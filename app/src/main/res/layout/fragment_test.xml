<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.TestFragment">

    <RelativeLayout
        android:id="@+id/test_relative1"
        android:layout_width="250px"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="10dp">
        <TextView
            android:id="@+id/test_self_inspection_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="@string/test_self_inspection"/>

        <TextView
            android:id="@+id/test_self_inspection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/test_self_inspection_title"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/test_relative2"
        android:layout_width="250px"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/test_voice_and_led_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="@string/test_voice_and_led"/>

        <Button
            android:id="@+id/test_voice_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_voice_and_led_title"/>
        <Button
            android:id="@+id/test_led_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_voice_btn"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/test_relative3"
        android:layout_width="250px"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="497dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="@string/test_uvc"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/test_relative4"
        android:layout_width="250px"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="731dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="@string/test_pir"/>


    </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>