<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".map.MapManagerFragment">
    <LinearLayout
        android:id="@+id/add_point_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="@string/edit_map_name_text"/>

        <TextView
            android:id="@+id/edit_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="AAAAAAAAAAAAA"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/edit_map_Image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/add_point_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/edit_map_Image"
        >

        <Button
            android:id="@+id/wall_btn"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Add Virtual Wall" />

        <Button
            android:id="@+id/mark_btn"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Mark Current Position" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Save" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:text="Back"
            android:textSize="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>