<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".map.MapManagerFragment">
    <LinearLayout
        android:id="@+id/add_point_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="@string/edit_map_name_text"/>
        <TextView
            android:id="@+id/edit_mapname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp" />
    </LinearLayout>

    <RelativeLayout
        android:background="@color/x_green"
        android:id="@+id/map_list_border"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_point_title"
        android:layout_above="@+id/line1"
        >
        <ListView
            android:id="@+id/point_and_wall_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/map_relative_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/map_list_border"
        android:layout_below="@+id/add_point_title"
        android:layout_above="@+id/line1"
        >

    <RelativeLayout
        android:id="@+id/map_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/edit_map_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />
    </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_charging_btn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:text="@string/map_edit_charging_btn" />

        <Button
            android:id="@+id/wall_btn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:text="@string/map_edit_virtual_wall" />

        <Button
            android:id="@+id/mark_btn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:text="@string/map_edit_position"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:text="@string/map_edit_save" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/map_edit_back"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>