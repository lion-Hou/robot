<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px">

        <TextView
            android:id="@+id/add_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18"
            android:gravity="center"
            android:layout_marginTop="15px"
            android:text="@string/task_name"/>
        <EditText
            android:id="@+id/new_map_mapName_editText"
            android:layout_width="@dimen/new_task_editText_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:textColor="@color/edit_color"
            android:textSize="@dimen/dimens_textsize_18"
            android:gravity="center"
            android:hint="@string/task_edit"
            android:textColorHint="@color/edit_color"
            android:layout_toRightOf="@id/add_task_name"
            android:theme="@style/MyEditText"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title2"
        android:layout_width="444dp"
        android:layout_height="93dp"
        android:layout_below="@+id/title1"
        android:layout_marginTop="34px">

        <TextView
            android:id="@+id/task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18"
            android:layout_marginTop="15px"/>

        <TextView
            android:id="@+id/task_type_select"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_marginLeft="@dimen/task_type_select_edit_marginLeft"
            android:layout_toRightOf="@+id/task_type"
            android:background="@drawable/renwu_bg_leixinganniu"
            android:gravity="center"
            android:text="@string/task_type_select"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/new_img1"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_marginLeft="@dimen/edit_img1_marginLeft"
            android:layout_marginTop="@dimen/edit_img1_marginTop"
            android:layout_toRightOf="@+id/task_type"
            android:src="@drawable/home_ic_jiantou" />

        <TextView
            android:id="@+id/task_type_selectTime"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_marginLeft="@dimen/task_type_selectTime_edit_marginLeft"
            android:layout_toRightOf="@+id/task_type_select"
            android:background="@drawable/renwu_bg_leixinganniu"
            android:gravity="center"
            android:text="@string/task_type_time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/new_img2"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_marginLeft="@dimen/edit_img2_marginLeft"
            android:layout_marginTop="@dimen/edit_img2_marginTop"
            android:layout_toRightOf="@+id/new_img1"
            android:src="@drawable/home_ic_jiantou" />

        <TextView
            android:id="@+id/task_type_selectWeek"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_below="@+id/task_type_selectTime"
            android:layout_marginLeft="@dimen/task_type_selectWeek_edit_marginLeft"
            android:layout_marginTop="@dimen/task_type_selectWeek_edit_marginTop"
            android:layout_toRightOf="@+id/task_type_select"
            android:background="@drawable/home_bg_xuanzekuang"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/task_type_week"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/new_img3"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_below="@+id/new_img2"
            android:layout_toRightOf="@+id/new_img1"
            android:layout_marginLeft="@dimen/edit_img3_marginLeft"
            android:layout_marginTop="@dimen/edit_img3_marginTop"
            android:src="@drawable/home_ic_jiantou" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/title2"
        android:layout_marginTop="30px"
        android:textSize="@dimen/dimens_textsize_18"
        android:text="@string/task_piont"/>

    <Button
        android:id="@+id/addtask_select_point"
        android:layout_width="@dimen/addtask_select_point_width"
        android:layout_height="@dimen/addtask_select_point_height"
        android:layout_below="@+id/title2"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/text1"
        android:layout_marginTop="15px"
        android:text="@string/selectPoint"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:background="@drawable/renwu_btn_xuandian"
        android:textAllCaps="false"/>

    <RelativeLayout
        android:id="@+id/title3"
        android:layout_width="@dimen/title3_width"
        android:layout_height="280px"
        android:layout_below="@+id/addtask_select_point"
        android:layout_marginTop="33px">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_task"
            android:layout_width="800px"
            android:layout_height="500px"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_gb_normal">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <Button
        android:id="@+id/task_new_save"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:layout_marginLeft="@dimen/task_new_save_marginLeft"
        android:background="@drawable/home_btn_anniu"
        android:layout_below="@+id/title3"
        android:layout_marginTop="15px"
        android:text="@string/new_map_save"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/task_new_back"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/home_btn_anniu"
        android:layout_below="@+id/title3"
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/task_new_save"
        android:layout_marginLeft="@dimen/task_new_back_marginLeft"
        android:text="@string/new_map_back"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:textAllCaps="false"/>

</RelativeLayout>