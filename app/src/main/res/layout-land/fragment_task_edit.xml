<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/title_edit"
        android:layout_width="500px"
        android:layout_height="100px">

        <TextView
            android:id="@+id/add_task_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="center"
            android:text="@string/task_name"/>
        <EditText
            android:id="@+id/new_map_mapName_editText_edit"
            android:layout_width="200px"
            android:layout_height="100px"
            android:textSize="18dp"
            android:gravity="bottom"
            android:hint="请输入任务名"
            android:layout_toRightOf="@id/add_task_name_edit"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title2_edit"
        android:layout_width="500px"
        android:layout_height="200px"
        android:layout_below="@+id/title_edit">
        <TextView
            android:id="@+id/task_type_edit"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="@string/task_type"/>
        <TextView
            android:id="@+id/task_type_select_edit"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/task_type_edit"
            android:layout_height="50px"
            android:layout_marginLeft="50px"
            android:text="@string/task_type_select"/>
        <TextView
            android:id="@+id/task_type_selectTime_edit"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/task_type_edit"
            android:layout_below="@+id/task_type_select_edit"
            android:layout_height="50px"
            android:layout_marginLeft="50px"
            android:text="@string/task_type_time"/>
        <TextView
            android:id="@+id/task_type_selectWeek_edit"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/task_type_edit"
            android:layout_below="@+id/task_type_selectTime_edit"
            android:layout_height="50px"
            android:layout_marginLeft="50px"
            android:text="@string/task_type_week"/>

    </RelativeLayout>

    <Button
        android:id="@+id/addtask_select_point_edit"
        android:layout_width="220px"
        android:layout_height="100px"
        android:layout_below="@+id/title2_edit"
        android:text="SelectPoint"/>

    <RelativeLayout
        android:id="@+id/title3_edit"
        android:layout_width="500px"
        android:layout_height="200px"
        android:layout_below="@+id/addtask_select_point_edit">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_task_edit"
            android:layout_width="800px"
            android:layout_height="500px"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_gb_normal">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <Button
        android:id="@+id/task_new_save_edit"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/title3_edit"
        android:text="SAVE"/>

    <Button
        android:id="@+id/task_new_back_edit"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/title3_edit"
        android:layout_toRightOf="@id/task_new_save_edit"
        android:text="BACK"/>

</RelativeLayout>