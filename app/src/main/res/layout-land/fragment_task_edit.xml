<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px">

        <TextView
            android:id="@+id/add_task_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18"
            android:gravity="center"
            android:layout_marginTop="15px"
            android:text="@string/task_name"/>
        <EditText
            android:id="@+id/new_map_mapName_editText_edit"
            android:layout_width="@dimen/new_task_editText_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18"
            android:gravity="center"
            android:hint="@string/task_edit"
            android:textColorHint="@color/edit_color"
            android:layout_toRightOf="@id/add_task_name_edit"
            android:theme="@style/MyEditText"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title2_edit"
        android:layout_width="444dp"
        android:layout_height="93dp"
        android:layout_below="@+id/title_edit"
        android:layout_marginTop="34px">

        <TextView
            android:id="@+id/task_type_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="@string/task_type"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <TextView
            android:id="@+id/task_type_select_edit"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_marginLeft="@dimen/task_type_select_edit_marginLeft"
            android:layout_toRightOf="@+id/task_type_edit"
            android:background="@drawable/renwu_bg_leixinganniu"
            android:gravity="center"
            android:text="@string/task_type_select"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/edit_img1"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_marginLeft="@dimen/edit_img1_marginLeft"
            android:layout_marginTop="@dimen/edit_img1_marginTop"
            android:layout_toRightOf="@+id/task_type_edit"
            android:src="@drawable/home_ic_jiantou" />

        <TextView
            android:id="@+id/task_type_selectTime_edit"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_marginLeft="@dimen/task_type_selectTime_edit_marginLeft"
            android:layout_toRightOf="@+id/task_type_select_edit"
            android:background="@drawable/renwu_bg_leixinganniu"
            android:gravity="center"
            android:text="@string/task_type_time"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/edit_img2"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_marginLeft="@dimen/edit_img2_marginLeft"
            android:layout_marginTop="@dimen/edit_img2_marginTop"
            android:layout_toRightOf="@+id/edit_img1"
            android:src="@drawable/home_ic_jiantou" />

        <TextView
            android:id="@+id/task_type_selectWeek_edit"
            android:layout_width="@dimen/task_type_select_edit_width"
            android:layout_height="@dimen/task_type_select_edit_height"
            android:layout_below="@+id/task_type_selectTime_edit"
            android:layout_marginLeft="@dimen/task_type_selectWeek_edit_marginLeft"
            android:layout_marginTop="@dimen/task_type_selectWeek_edit_marginTop"
            android:layout_toRightOf="@+id/task_type_select_edit"
            android:background="@drawable/home_bg_xuanzekuang"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/task_type_week"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimens_textsize_18" />

        <ImageView
            android:id="@+id/edit_img3"
            android:layout_width="@dimen/arrow_width"
            android:layout_height="@dimen/arrow_width"
            android:layout_below="@+id/edit_img2"
            android:layout_marginLeft="@dimen/edit_img3_marginLeft"
            android:layout_marginTop="@dimen/edit_img3_marginTop"
            android:layout_toRightOf="@+id/edit_img1"
            android:src="@drawable/home_ic_jiantou" />

    </RelativeLayout>

    <TextView
        android:id="@+id/edit_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/title2_edit"
        android:layout_marginTop="30px"
        android:textSize="@dimen/dimens_textsize_18"
        android:text="@string/task_piont"/>

    <Button
        android:id="@+id/addtask_select_point_edit"
        android:layout_width="@dimen/dimens_496"
        android:layout_height="@dimen/dimens_54"
        android:layout_below="@+id/title2_edit"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/edit_text1"
        android:layout_marginTop="15px"
        android:text="@string/selectPoint"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:background="@drawable/renwu_btn_xuandian"
        android:textAllCaps="false"/>

    <RelativeLayout
        android:id="@+id/title3_edit"
        android:layout_width="580px"
        android:layout_height="280px"
        android:layout_below="@+id/addtask_select_point_edit"
        android:layout_marginTop="33px"
        android:background="@drawable/btn_gb_normal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_task_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <Button
        android:id="@+id/task_new_save_edit"
        android:layout_width="@dimen/dimens_102"
        android:layout_height="@dimen/dimens_54"
        android:layout_marginLeft="363px"
        android:background="@drawable/home_btn_anniu"
        android:layout_below="@+id/title3_edit"
        android:layout_marginTop="15px"
        android:text="@string/new_map_save"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/task_new_back_edit_edit"
        android:layout_width="@dimen/dimens_102"
        android:layout_height="@dimen/dimens_54"
        android:background="@drawable/home_btn_anniu"
        android:layout_below="@+id/title3_edit"
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/task_new_save_edit"
        android:layout_marginLeft="15px"
        android:text="@string/new_map_back"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimens_textsize_18"
        android:textAllCaps="false"/>

</RelativeLayout>