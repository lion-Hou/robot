<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/robot_bg_beijing">
    <RelativeLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_marginTop="@dimen/dimens_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/net_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_37"
                android:textSize="@dimen/dimens_24"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"/>

            <ImageView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/net_time"
                android:layout_marginLeft="220px"
                android:src="@drawable/home_ic_dianchi"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/main_batty_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_toRightOf="@id/battery"
                android:src="@drawable/home_ic_bolt" />

            <TextView
                android:id="@+id/time"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/battery"
                android:textSize="@dimen/dimens_16px" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/robot"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title">
        <ImageView
            android:id="@+id/robot_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_119"
            android:background="@drawable/home_ic_robot" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/second_fragment"
        android:layout_width="@dimen/dimens_246"
        android:layout_height="@dimen/dimens_246"
        android:layout_marginLeft="@dimen/dimens_119"
        android:layout_marginTop="@dimen/dimens_41"
        android:layout_below="@id/robot"/>

    <FrameLayout
        android:id="@+id/first_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimens_132"
        android:layout_toRightOf="@+id/robot"/>

    </RelativeLayout>


</RelativeLayout>